@code {
    private bool ShowPagination { get; set; } = true;
    private bool ShowLetters { get; set; } = false;
    private bool ShowPrescriptionForm { get; set; }
    private bool ShowEditForm { get; set; }
    
    private readonly char[] Alphabet =
        "ABCDEFGHIJKLMNOPQRSTUVWXYZ".ToCharArray();

    private char? ActiveLetter { get; set; }
    private int? EditingMedicationIndex { get; set; }
    private DoctorPrescriptionRow? SelectedPrescription { get; set; }
    
    private string CurrentMedication { get; set; } = string.Empty;
    private string CurrentDosage { get; set; } = string.Empty;
    private string CurrentQuantity { get; set; } = string.Empty;
    private string CurrentFrequency { get; set; } = string.Empty;
    private string CurrentDuration { get; set; } = string.Empty;
    
    private List<MedicationEntry> MedicationEntries { get; set; } = new List<MedicationEntry>();

    // Pagination
    private int CurrentPage { get; set; } = 1;
    private int _pageSize = 5;
    private int PageSize
    {
        get => _pageSize;
        set
        {
            _pageSize = value;
            CurrentPage = 1;
        }
    }

    private int TotalPages => PageSize <= 0 || Prescriptions.Length == 0
        ? 0
        : (int)Math.Ceiling(Prescriptions.Length / (double)PageSize);

    private IEnumerable<DoctorPrescriptionRow> PagedPrescriptions =>
        TotalPages == 0
            ? Enumerable.Empty<DoctorPrescriptionRow>()
            : Prescriptions
                .Skip((CurrentPage - 1) * PageSize)
                .Take(PageSize);

    public record DoctorPrescriptionRow(
        string Patient,
        string Doctor,
        string Diagnosis,
        string Medications,
        string StatusKey,
        string StatusLabel,
        string Date
    );

    private readonly DoctorPrescriptionRow[] Prescriptions = new[]
    {
        new DoctorPrescriptionRow("Bronya Rand", "Dr. Lee", "Infection", "Amoxicillin", "active", "Active", "03/09/24"),
        new DoctorPrescriptionRow("Himeko Murata", "Dr. Santos", "Infection", "Amoxicillin", "pending", "Pending", "03/09/24"),
        new DoctorPrescriptionRow("Ruan Mei", "Dr. Cruz", "Fever", "Paracetamol", "pending", "Pending", "03/09/24"),
    };

    

    private void SelectLetter(char letter)
    {
        ShowLetters = true;
        ActiveLetter = letter;
    }

    private void TogglePagination()
    {
        ShowPagination = !ShowPagination;
    }

    private void GoToPage(int page)
    {
        if (TotalPages == 0)
        {
            return;
        }

        if (page < 1)
        {
            page = 1;
        }
        else if (page > TotalPages)
        {
            page = TotalPages;
        }

        CurrentPage = page;
    }

    private void PreviousPage() => GoToPage(CurrentPage - 1);

    private void NextPage() => GoToPage(CurrentPage + 1);

    private void OpenPrescriptionForm()
    {
        ResetMedicationState();
        SelectedPrescription = null;
        ShowPrescriptionForm = true;
    }

    private void ClosePrescriptionForm()
    {
        ShowPrescriptionForm = false;
    }

    private void OpenEditPrescription(DoctorPrescriptionRow row)
    {
        SelectedPrescription = row;
        ResetMedicationState();

        if (!string.IsNullOrWhiteSpace(row.Medications))
        {
            MedicationEntries.Add(
                new MedicationEntry(
                    row.Medications,
                    string.Empty,
                    string.Empty,
                    string.Empty,
                    string.Empty
                )
            );
        }

        ShowEditForm = true;
    }

    private void CloseEditForm()
    {
        ShowEditForm = false;
    }

    private void AddMedicationEntry()
    {
        if (string.IsNullOrWhiteSpace(CurrentMedication))
        {
            return;
        }

        var newEntry = new MedicationEntry(
            CurrentMedication,
            CurrentDosage,
            CurrentQuantity,
            CurrentFrequency,
            CurrentDuration
        );

        if (EditingMedicationIndex is int index && index >= 0 && index < MedicationEntries.Count)
        {
            MedicationEntries[index] = newEntry;
        }
        else
        {
            MedicationEntries.Add(newEntry);
        }

        ResetCurrentMedicationInputs();
    }

    public record MedicationEntry(
        string Medication,
        string Dosage,
        string Quantity,
        string Frequency,
        string Duration
    );

    private void ResetMedicationState()
    {
        MedicationEntries.Clear();
        ResetCurrentMedicationInputs();
    }

    private void ResetCurrentMedicationInputs()
    {
        CurrentMedication = string.Empty;
        CurrentDosage = string.Empty;
        CurrentQuantity = string.Empty;
        CurrentFrequency = string.Empty;
        CurrentDuration = string.Empty;
        EditingMedicationIndex = null;
    }

    private void LoadMedicationEntry(int index)
    {
        if (index < 0 || index >= MedicationEntries.Count)
        {
            return;
        }

        var med = MedicationEntries[index];
        CurrentMedication = med.Medication;
        CurrentDosage = med.Dosage;
        CurrentQuantity = med.Quantity;
        CurrentFrequency = med.Frequency;
        CurrentDuration = med.Duration;
        EditingMedicationIndex = index;
    }
}










