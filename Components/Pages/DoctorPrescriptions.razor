@page "/doctor-prescriptions"
@layout Layout.DashboardLayout
@using System.Linq

<div class="dashboard-page">
    <header class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Prescription</h1>
            <p class="dashboard-subtitle">Welcome back Clinical Staff!</p>
        </div>

        <div class="dashboard-user-info">
            <span class="dashboard-user-email">admin@gmail.com</span>
            <div class="dashboard-user-avatar">DR</div>
            <span class="dashboard-user-name">Clinical</span>
        </div>
    </header>

    <section class="ip-overview">
        <div class="ip-overview-header">
            <h2 class="ip-section-title">Prescription Overview</h2>
            <div class="ip-show-entries">
                <span>Show</span>
                <select @bind="PageSize">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="25">25</option>
                </select>
                <span>entries</span>
            </div>
        </div>

        <div class="ip-filters-row">
            <div class="ip-alpha-filter">
                <button class="ip-filter-pill false" >All</button>

                @if (ShowLetters)
                {
                    @foreach (var letter in Alphabet)
                    {
                        <button class="ip-filter-pill @("")"
                                >@letter</button>
                    }
                }
            </div>

            <div class="ip-search-row">
                <div class="ip-search-box">
                    <span class="ip-search-icon"></span>
                    <input class="ip-search-input" placeholder="Search Patient" />
                </div>

                <div class="ip-actions">
                    <button class="ip-action-btn">Sort</button>
                    <button class="ip-action-btn">Filters</button>
                    <button class="ip-stock-btn" @onclick="OpenPrescriptionForm">+ New Prescription</button>
                </div>
            </div>
        </div>

        <div class="ip-table-outer">
            <div class="ip-table-wrapper">
                <table class="ip-table">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Doctor</th>
                            <th>Diagnosis</th>
                            <th>Medications</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th class="ip-col-actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in PagedPrescriptions)
                        {
                            <tr>
                                <td>@p.Patient</td>
                                <td>@p.Doctor</td>
                                <td>@p.Diagnosis</td>
                                <td>@p.Medications</td>
                                <td>
                                    <span class="ip-status-pill ip-status-@p.StatusKey">
                                        <span class="ip-status-dot"></span>
                                        <span>@p.StatusLabel</span>
                                    </span>
                                </td>
                                <td>@p.Date</td>
                                <td class="ip-actions-cell">
                                    <button type="button" class="ip-edit-btn" aria-label="Edit prescription" @onclick="() => OpenEditPrescription(p)">
                                        <span class="ip-edit-icon"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <button type="button" class="ip-pagination-toggle" @onclick="TogglePagination" aria-label="Hide or show page buttons">
            <span>@(ShowPagination ? "›" : "‹")</span>
        </button>

        @if (ShowPagination && TotalPages > 1)
        {
            <div class="ip-pagination">
                <button class="ip-page-btn" @onclick="PreviousPage" disabled="@(CurrentPage <= 1)">Previous</button>

                @for (var pageNumber = 1; pageNumber <= TotalPages; pageNumber++)
                {
                    <button class="ip-page-number @(pageNumber == CurrentPage ? "active" : string.Empty)"
                            @onclick="() => GoToPage(pageNumber)">
                        @pageNumber
                    </button>
                }

                <button class="ip-page-btn" @onclick="NextPage" disabled="@(CurrentPage >= TotalPages)">Next</button>
            </div>
        }
    </section>

