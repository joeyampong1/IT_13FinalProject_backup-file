@page "/billing-insurance-claims"
@layout Layout.DashboardLayout
@using IT_13FinalProject.Models
@using IT_13FinalProject.Services
@inject IPatientBillService BillService
@inject IClaimDocumentStore ClaimDocumentStore

<div class="inv-page">
    <header class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Insurance and Claims</h1>
            <p class="dashboard-subtitle">Welcome back Billing Staff!</p>
        </div>

        <div class="dashboard-user-info">
            <span class="dashboard-user-email">billing@gmail.com</span>
            <div class="dashboard-user-avatar">üë§</div>
            <span class="dashboard-user-name">Billing staff</span>
        </div>
    </header>

    <section class="inv-card">
        <div class="inv-controls">
            <h2 class="inv-section-title">Insurance Process</h2>

            <div class="inv-tabs-row">
                <span class="inv-tabs-label">Recent</span>
                <div class="inv-tabs">
                    <button class="inv-tab inv-tab-active">Overview</button>
                    <button class="inv-tab" @onclick="GoToRequest">Request</button>
                </div>
            </div>

            <div class="inv-search-row">
                <div class="inv-search-box">
                    <span class="inv-search-icon"></span>
                    <input class="inv-search-input" placeholder="Search Name" @bind="SearchTerm" @oninput="OnSearchInput" />
                </div>

                <div class="inv-actions">
                    <button class="inv-action-btn" @onclick="ToggleSortMenu">Sort</button>
                    <button class="inv-action-btn" @onclick="ToggleFilterMenu">Filters</button>
                </div>

                @if (ShowSortMenu)
                {
                    <div class="inv-dropdown-menu">
                        <button class="inv-dropdown-item" @onclick="SortByName">Name</button>
                        <button class="inv-dropdown-item" @onclick="SortByDate">Date</button>
                        <button class="inv-dropdown-item" @onclick="SortByInsurance">Insurance</button>
                        <button class="inv-dropdown-item" @onclick="SortByStatus">Status</button>
                    </div>
                }

                @if (ShowFilterMenu)
                {
                    <div class="inv-dropdown-menu">
                        <div class="inv-filter-section">
                            <label>Insurance:</label>
                            <select class="inv-filter-select" @bind="SelectedInsuranceFilter">
                                <option value="">All</option>
                                <option value="PhilHealth">PhilHealth</option>
                                <option value="GSIS / SSS Health Benefit">GSIS / SSS Health Benefit</option>
                                <option value="Medicare">Medicare</option>
                                <option value="Kaiser Health">Kaiser Health</option>
                                <option value="PhilCare">PhilCare</option>
                            </select>
                        </div>
                        <div class="inv-filter-section">
                            <label>Status:</label>
                            <select class="inv-filter-select" @bind="SelectedStatusFilter">
                                <option value="">All</option>
                                <option value="Pending">Pending</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>
                        <button class="inv-filter-apply" @onclick="ApplyFilters">Apply Filters</button>
                    </div>
                }
            </div>
        </div>

        @if (isLoading)
        {
            <div class="inv-loading">
                <div class="inv-spinner"></div>
                <p>Loading insurance claims...</p>
            </div>
        }
        else if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="inv-error">
                <p>@errorMessage</p>
                <button class="inv-retry-btn" @onclick="LoadInsuranceBills">Retry</button>
            </div>
        }
        else if (!FilteredItems.Any())
        {
            <div class="inv-empty">
                <p>No insurance claims found.</p>
            </div>
        }
        else
        {
            <div class="inv-list">
                @foreach (var item in GetPagedItems())
                {
                    <div class="inv-row">
                        <div class="inv-row-main">
                            <div class="inv-row-name">
                                <span class="inv-row-label">Name</span>
                                <span class="inv-row-value">@item.PatientName</span>
                            </div>
                        </div>
                        <div class="inv-row-columns">
                            <div class="inv-row-col">
                                <span class="inv-row-label">Insurance</span>
                                <span class="inv-row-value">@item.InsuranceProvider</span>
                            </div>
                            <div class="inv-row-col">
                                <span class="inv-row-label">Date</span>
                                <span class="inv-row-value">@item.DateOfVisit.ToString("MM/dd/yy")</span>
                            </div>
                            <div class="inv-row-col">
                                <span class="inv-row-label">Status</span>
                                <span class="inv-row-value">@item.AssessmentStatus</span>
                            </div>
                            <div class="inv-row-col inv-row-col-action">
                                <button class="inv-view-btn" type="button" aria-label="View insurance claim" @onclick="() => OpenViewPanel(item)">
                                    <span class="inv-view-icon"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        @if (IsViewPanelOpen && SelectedRow is not null)
        {
            <div class="inv-view-overlay">
                <div class="inv-view-panel">
                    <h3 class="inv-view-title">Insurance Request Form</h3>
                    <div class="inv-view-subtitle">Insurance @SelectedRow.AssessmentStatus</div>

                    <div class="inv-view-section">
                        <div class="inv-view-section-title">Patient Information</div>
                        <div class="inv-view-grid">
                            <div>
                                <div class="inv-view-label">Name:</div>
                                <div class="inv-view-value">@SelectedRow.PatientName</div>
                            </div>
                            <div>
                                <div class="inv-view-label">Patient ID:</div>
                                <div class="inv-view-value">@GetPatientId(SelectedRow.PatientId)</div>
                            </div>
                            <div>
                                <div class="inv-view-label">Insurance:</div>
                                <div class="inv-view-value">@SelectedRow.InsuranceProvider</div>
                            </div>
                            <div>
                                <div class="inv-view-label">Date:</div>
                                <div class="inv-view-value">@SelectedRow.DateOfVisit.ToString("MM/dd/yy")</div>
                            </div>
                            <div>
                                <div class="inv-view-label">Status:</div>
                                <div class="inv-view-value inv-view-status-@SelectedRow.AssessmentStatus.ToLower()">@SelectedRow.AssessmentStatus</div>
                            </div>
                            <div>
                                <div class="inv-view-label">Contact:</div>
                                <div class="inv-view-value">@GetContactNumber(SelectedRow.PatientName)</div>
                            </div>
                        </div>
                    </div>

                    <div class="inv-view-section">
                        <div class="inv-view-section-title">Claim Details</div>
                        <table class="inv-view-table">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Amount</th>
                                    <th>Coverable</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Total Bill Amount</td>
                                    <td>‚Ç±@SelectedRow.TotalAmount.ToString("F2")</td>
                                    <td>‚Ç±@SelectedRow.InsuranceCoverage.ToString("F2")</td>
                                </tr>
                                <tr>
                                    <td>Patient Responsibility</td>
                                    <td>‚Ç±@SelectedRow.PatientResponsibility.ToString("F2")</td>
                                    <td>-</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="inv-view-total-row">
                            <span class="inv-view-label">Total Coverable:</span>
                            <span class="inv-view-value">‚Ç±@SelectedRow.InsuranceCoverage.ToString("F2")</span>
                        </div>
                    </div>

                    <div class="inv-view-doc-list">
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Medical Certificate</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye" @onclick='() => OpenDocumentViewer("Medical Certificate")'>üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Laboratory Results</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye" @onclick='() => OpenDocumentViewer("Laboratory Results")'>üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Prescription Copies</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye" @onclick='() => OpenDocumentViewer("Prescription Copies")'>üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Eligibility Verification</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye" @onclick='() => OpenDocumentViewer("Eligibility Verification")'>üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Claim Form</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye" @onclick='() => OpenDocumentViewer("Claim Form")'>üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Official Receipt/Invoice</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye" @onclick='() => OpenDocumentViewer("Official Receipt/Invoice")'>üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Patient Information Sheet</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye" @onclick='() => OpenDocumentViewer("Patient Information Sheet")'>üëÅ</button>
                        </div>
                        <div class="inv-view-doc-row">
                            <div class="inv-view-doc-left">
                                <span class="inv-view-doc-folder"></span>
                                <span class="inv-view-doc-name">Valid ID Copies</span>
                            </div>
                            <button type="button" class="inv-view-doc-eye" @onclick='() => OpenDocumentViewer("Valid ID Copies")'>üëÅ</button>
                        </div>
                    </div>

                    <div class="inv-view-footer">
                        <button type="button" class="inv-view-close" @onclick="CloseViewPanel">Close</button>
                    </div>
                </div>
            </div>
        }

        @if (IsDocumentViewerOpen)
        {
            <div class="inv-view-overlay" @onclick="CloseDocumentViewer">
                <div class="inv-view-panel" @onclick:stopPropagation>
                    <h3 class="inv-view-title">@DocumentViewerTitle</h3>

                    @if (!string.IsNullOrEmpty(DocumentViewerError))
                    {
                        <div class="inv-empty">
                            <p>@DocumentViewerError</p>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(DocumentViewerDataUrl) && DocumentViewerIsEmbeddable)
                    {
                        <iframe style="width: 100%; height: 70vh; border: 0;" src="@DocumentViewerDataUrl"></iframe>
                    }
                    else if (!string.IsNullOrEmpty(DocumentViewerDownloadDataUrl))
                    {
                        <div class="inv-empty">
                            <a href="@DocumentViewerDownloadDataUrl" download="@DocumentViewerFileName">Download @DocumentViewerFileName</a>
                        </div>
                    }
                    else
                    {
                        <div class="inv-empty">
                            <p>No file uploaded.</p>
                        </div>
                    }

                    <div class="inv-view-footer">
                        <button type="button" class="inv-view-close" @onclick="CloseDocumentViewer">Close</button>
                    </div>
                </div>
            </div>
        }

        <button type="button" class="inv-pagination-toggle" @onclick="TogglePagination" aria-label="Hide or show page buttons">
            <span>@(ShowPagination ? "‚Ä∫" : "‚Äπ")</span>
        </button>

        @if (ShowPagination)
        {
            <div class="inv-pagination">
                <button class="inv-page-btn" @onclick="() => GoToPage(CurrentPage - 1)" disabled="!HasPreviousPage">Previous</button>
                @for (int i = 1; i <= TotalPages; i++)
                {
                    if (i == 1 || i == TotalPages || (i >= CurrentPage - 1 && i <= CurrentPage + 1))
                    {
                        <button class="inv-page-number @(i == CurrentPage ? "inv-page-number-active" : "")" @onclick="() => GoToPage(i)">@i</button>
                    }
                    else if (i == CurrentPage - 2 || i == CurrentPage + 2)
                    {
                        <span class="inv-page-dots">...</span>
                    }
                }
                <button class="inv-page-btn" @onclick="() => GoToPage(CurrentPage + 1)" disabled="!HasNextPage">Next</button>
            </div>
        }
    </section>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private List<PatientBill> InsuranceBills { get; set; } = new();
    private List<PatientBill> FilteredItems = new();
    private bool isLoading { get; set; } = true;
    private string? errorMessage { get; set; }

    private string SearchTerm { get; set; } = string.Empty;
    private string SelectedInsuranceFilter { get; set; } = string.Empty;
    private string SelectedStatusFilter { get; set; } = string.Empty;
    private string SortColumn { get; set; } = string.Empty;
    private bool SortAscending { get; set; } = true;

    private bool ShowSortMenu { get; set; }
    private bool ShowFilterMenu { get; set; }

    private int CurrentPage { get; set; } = 1;
    private int ItemsPerPage { get; set; } = 5;
    private int TotalPages => (int)Math.Ceiling((double)FilteredItems.Count / ItemsPerPage);
    private bool HasPreviousPage => CurrentPage > 1;
    private bool HasNextPage => CurrentPage < TotalPages;

    private bool ShowPagination { get; set; } = true;

    private PatientBill? SelectedRow { get; set; }

    private bool IsViewPanelOpen { get; set; }

    private bool IsDocumentViewerOpen { get; set; }
    private string DocumentViewerTitle { get; set; } = string.Empty;
    private string? DocumentViewerFileName { get; set; }
    private string? DocumentViewerDataUrl { get; set; }
    private string? DocumentViewerDownloadDataUrl { get; set; }
    private string? DocumentViewerError { get; set; }
    private bool DocumentViewerIsEmbeddable { get; set; }

    private void TogglePagination()
    {
        ShowPagination = !ShowPagination;
    }

    private void GoToRequest() => Navigation.NavigateTo("/billing-insurance-request");

    private void OpenViewPanel(PatientBill row)
    {
        Console.WriteLine($"OpenViewPanel called for: {row.PatientName}");
        SelectedRow = row;
        IsViewPanelOpen = true;
        StateHasChanged();
    }

    private void CloseViewPanel()
    {
        IsViewPanelOpen = false;
        StateHasChanged();
    }

    private void OpenDocumentViewer(string docKey)
    {
        DocumentViewerTitle = docKey;
        DocumentViewerFileName = null;
        DocumentViewerDataUrl = null;
        DocumentViewerDownloadDataUrl = null;
        DocumentViewerError = null;
        DocumentViewerIsEmbeddable = false;

        if (SelectedRow is null)
        {
            DocumentViewerError = "No claim selected.";
            IsDocumentViewerOpen = true;
            return;
        }

        if (!ClaimDocumentStore.TryGet(SelectedRow.BillId, docKey, out var doc) || doc is null)
        {
            DocumentViewerError = "No file uploaded.";
            IsDocumentViewerOpen = true;
            return;
        }

        DocumentViewerFileName = doc.FileName;

        var base64 = Convert.ToBase64String(doc.Content);
        var dataUrl = $"data:{doc.ContentType};base64,{base64}";
        DocumentViewerDownloadDataUrl = dataUrl;

        var ct = (doc.ContentType ?? string.Empty).ToLowerInvariant();
        DocumentViewerIsEmbeddable = ct.StartsWith("image/") || ct == "application/pdf";
        if (DocumentViewerIsEmbeddable)
        {
            DocumentViewerDataUrl = dataUrl;
        }

        IsDocumentViewerOpen = true;
    }

    private void CloseDocumentViewer()
    {
        IsDocumentViewerOpen = false;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadInsuranceBills();
    }

    private async Task LoadInsuranceBills()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            
            // Get all bills that have insurance provider OR are submitted as insurance claims
            var allBills = await BillService.GetActiveAsync();
            InsuranceBills = allBills.Where(b => 
                !string.IsNullOrEmpty(b.InsuranceProvider) || 
                b.AssessmentStatus == "Pending" ||
                b.AssessmentStatus == "Approved" ||
                b.AssessmentStatus == "Rejected"
            ).ToList();
            
            ApplyFiltersAndPagination();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading insurance bills: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OnSearchInput()
    {
        CurrentPage = 1;
        ApplyFiltersAndPagination();
    }

    private void ToggleSortMenu()
    {
        ShowSortMenu = !ShowSortMenu;
        ShowFilterMenu = false;
    }

    private void ToggleFilterMenu()
    {
        ShowFilterMenu = !ShowFilterMenu;
        ShowSortMenu = false;
    }

    private void SortBy(string column)
    {
        if (SortColumn == column)
        {
            SortAscending = !SortAscending;
        }
        else
        {
            SortColumn = column;
            SortAscending = true;
        }

        ShowSortMenu = false;
        ApplyFiltersAndPagination();
    }

    private void ApplyFilters()
    {
        CurrentPage = 1;
        ShowFilterMenu = false;
        ApplyFiltersAndPagination();
    }

    private void ApplyFiltersAndPagination()
    {
        var filtered = InsuranceBills.AsEnumerable();

        // Apply search filter
        if (!string.IsNullOrWhiteSpace(SearchTerm))
        {
            filtered = filtered.Where(item => 
                item.PatientName.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));
        }

        // Apply insurance filter
        if (!string.IsNullOrWhiteSpace(SelectedInsuranceFilter))
        {
            filtered = filtered.Where(item => 
                item.InsuranceProvider != null && 
                item.InsuranceProvider.Equals(SelectedInsuranceFilter, StringComparison.OrdinalIgnoreCase));
        }

        // Apply status filter
        if (!string.IsNullOrWhiteSpace(SelectedStatusFilter))
        {
            filtered = filtered.Where(item => 
                item.AssessmentStatus.Equals(SelectedStatusFilter, StringComparison.OrdinalIgnoreCase));
        }

        // Apply sorting
        if (!string.IsNullOrWhiteSpace(SortColumn))
        {
            filtered = SortColumn switch
            {
                "Name" => SortAscending ? 
                    filtered.OrderBy(x => x.PatientName) : 
                    filtered.OrderByDescending(x => x.PatientName),
                "Date" => SortAscending ? 
                    filtered.OrderBy(x => x.DateOfVisit) : 
                    filtered.OrderByDescending(x => x.DateOfVisit),
                "Insurance" => SortAscending ? 
                    filtered.OrderBy(x => x.InsuranceProvider ?? "") : 
                    filtered.OrderByDescending(x => x.InsuranceProvider ?? ""),
                "Status" => SortAscending ? 
                    filtered.OrderBy(x => x.AssessmentStatus) : 
                    filtered.OrderByDescending(x => x.AssessmentStatus),
                _ => filtered
            };
        }

        FilteredItems = filtered.ToList();
    }

    private void GoToPage(int pageNumber)
    {
        if (pageNumber >= 1 && pageNumber <= TotalPages)
        {
            CurrentPage = pageNumber;
        }
    }

    private List<PatientBill> GetPagedItems()
    {
        var startIndex = (CurrentPage - 1) * ItemsPerPage;
        return FilteredItems.Skip(startIndex).Take(ItemsPerPage).ToList();
    }

    private string GetPatientId(int? patientId)
    {
        return patientId.HasValue ? $"#{patientId.Value:D6}" : $"#{Math.Abs(DateTime.Now.GetHashCode()) % 1000000:D6}";
    }

    private string GetContactNumber(string name)
    {
        var hash = name.GetHashCode();
        return $"+63-{Math.Abs(hash) % 900 + 100}-{Math.Abs(hash * 2) % 1000000:D4}";
    }

    private void SortByName() => SortBy("Name");
    private void SortByDate() => SortBy("Date");
    private void SortByInsurance() => SortBy("Insurance");
    private void SortByStatus() => SortBy("Status");
}










